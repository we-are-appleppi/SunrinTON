<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/beetkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="134dp"
        android:src="@drawable/beetkey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/invalid_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="87dp"
        android:src="@drawable/invalid_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/beetkey"
        android:layout_marginTop="6dp"/>

    <EditText
        android:id="@+id/idText"
        android:layout_width="280dp"
        android:layout_height="39dp"
        android:layout_marginTop="67dp"
        android:background="@drawable/layer_2_copy_4"
        android:hint="E-MAIL"
        android:paddingLeft="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/invalid_name" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="280dp"
        android:layout_height="39dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/layer_2_copy_4"
        android:hint="PASSWORD"
        android:paddingLeft="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idText" />

    <TextView
        android:id="@+id/loginButton"
        android:layout_width="280dp"
        android:layout_height="39dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/layer_2_copy_5"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:text="LOGIN"
        android:textSize="14dp"
        android:textColor="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordText"
        android:gravity="center"/>


    <TextView
        android:id="@+id/joinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아직 회원이 아니신가요?"
        android:textSize="8.7sp"
        app:layout_constraintTop_toBottomOf="@id/loginButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
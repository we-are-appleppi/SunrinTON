<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/group_1"
    tools:openDrawer="start">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTACT"
        app:layout_constraintBottom_toTopOf="@+id/search"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="70dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/hintfont"
        android:textSize="9sp"
        />
    
    <EditText
        android:layout_width="287dp"
        android:layout_height="46dp"
        android:id="@+id/search"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/layer_2_copy_8"
        android:hint="거래처의 E-MAIL을 입력하세요"
        android:textColorHint="#4a000000"
        android:gravity="center"
        android:drawableRight="@drawable/drawable_shape_4"
        android:paddingRight="14dp"
        android:paddingLeft="30dp"
        android:textSize="14sp"
        android:layout_marginTop="107dp"
        android:fontFamily="@font/hintfont"/>
    
    <ImageButton
        android:id="@+id/search_button"
        android:layout_width="70dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@+id/search"
        android:layout_marginTop="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/group2"
        />

    <TextView
        android:layout_width="104dp"
        android:layout_height="27dp"
        android:background="@drawable/layer_2_copy_13"
        android:text="최근 검색 기록"
        android:textColor="#fff"
        android:gravity="center"
        android:fontFamily="@font/hintfont"
        android:textSize="11sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="320dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"/>

    <!--
    <include
        layout="@layout/app_bar_main"

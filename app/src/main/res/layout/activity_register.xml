<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/beetkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="131dp"
        android:src="@drawable/beetkey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/invalid_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="87dp"
        android:src="@drawable/invalid_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/beetkey"
        android:layout_marginTop="6dp"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="39dp"
        app:layout_constraintTop_toBottomOf="@id/invalid_name"
        android:layout_marginTop="42dp"
        android:background="@drawable/layer_2_copy_4"
        android:hint="E-MAIL"
        android:paddingLeft="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/hintfont"
        android:id="@+id/et_email"/>
    <EditText
        android:layout_width="280dp"
        android:layout_height="39dp"
        android:background="@drawable/layer_2_copy_4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="PASSWORD"
        android:paddingLeft="19dp"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/hintfont"
        android:id="@+id/et_password"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="39dp"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/layer_2_copy_4"
        android:hint="NAME"
        android:paddingLeft="19dp"
        android:layout_marginTop="25dp"
        android:id="@+id/et_name"
        android:fontFamily="@font/hintfont" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="39dp"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/layer_2_copy_5"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textSize="14.5sp"
        android:textColor="#fff"
        android:id="@+id/start"
        android:fontFamily="@font/hintfont"
        android:text="REGISTER"/>


</androidx.constraintlayout.widget.ConstraintLayout>